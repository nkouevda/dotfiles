[user]
	name = Nikita Kouevda
	email = nkouevda@gmail.com

[grep]
	lineNumber = true

[diff]
	algorithm = patience
	tool = vimdiff

[difftool]
	prompt = false

[fetch]
	prune = true

[pull]
	rebase = true

[push]
	default = upstream

[pretty]
	name = "%C(yellow)%h%C(auto)%d %C(blue)%aN %C(reset)%s"

[alias]
	st = status
	br = branch --verbose --verbose
	bra = branch --verbose --verbose --all
	ci = commit
	cia = commit --amend
	cian = commit --amend --no-edit
	co = checkout
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort
	df = diff
	dfv = difftool
	dfc = diff --cached
	dfcv = difftool --cached
	ss = show --stat
	sv = difftool --cached HEAD^
	lg = log --graph --pretty=name
	lga = log --graph --pretty=name --all
	lgs = log --graph --pretty=name --all --simplify-by-decoration
