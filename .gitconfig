[user]
	name = Nikita Kouevda
	email = nkouevda@gmail.com

[grep]
	lineNumber = true

[diff]
	algorithm = patience
	tool = vimdiff

[difftool]
	prompt = false
	trustExitCode = true

[fetch]
	prune = true

[pull]
	rebase = true

[push]
	default = upstream

[pretty]
	name = "%C(yellow)%h%C(auto)%d %C(blue)%aN %C(reset)%s"

[alias]
	st = status
	br = branch --verbose --verbose
	bra = branch --verbose --verbose --all
	sb = show-branch
	sba = show-branch --all
	lg = log --graph --pretty=name
	lga = log --graph --pretty=name --all
	lgs = log --graph --pretty=name --all --simplify-by-decoration
	sh = stash
	shl = stash list
	shs = stash save
	sha = stash apply
	shp = stash pop
	shd = stash drop
	shc = stash clear
	ci = commit
	cia = commit --amend
	ciar = commit --amend --reset-author
	cian = commit --amend --no-edit
	cianr = commit --amend --no-edit --reset-author
	co = checkout
	cob = checkout -b
	cof = checkout -B
	com = checkout master
	cor = "!sh -c '[[ -n \"$1\" ]] && \
		git checkout -B \"$1\" \"${2:-origin}/$1\"' -"
	corm = "!sh -c 'git checkout -B master \"${1:-origin}/master\"' -"
	hard = reset --hard HEAD
	soft = reset --soft HEAD
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	fe = fetch
	fea = fetch --all
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort
	rbm = rebase master
	df = diff
	dfu = diff --unified=0
	dfs = diff --stat
	dfv = difftool
	dfc = diff --cached
	dfcu = diff --cached --unified=0
	dfcs = diff --cached --stat
	dfcv = difftool --cached
	dfo = diff HEAD^ HEAD
	dfou = diff HEAD^ HEAD --unified=0
	dfos = diff HEAD^ HEAD --stat
	dfov = difftool HEAD^ HEAD
	foreach = "!sh -c 'find -- \"$1\" -type d -name \".git\" \
		-print -execdir \"${@:2}\" \";\"' -"
