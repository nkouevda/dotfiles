[user]
	name = Nikita Kouevda
	email = nkouevda@gmail.com

[diff]
	algorithm = patience
	tool = vimdiff

[grep]
	lineNumber = true

[branch]
	autosetuprebase = always

[fetch]
	prune = true

[push]
	default = upstream

[alias]
	st = status
	br = branch
	bra = branch -a
	ci = commit
	cia = commit --amend
	cian = commit --amend --no-edit
	co = checkout
	cp = cherry-pick
	rb = rebase
	df = diff
	dfv = difftool --no-prompt
	dfc = diff --cached
	dfcv = difftool --no-prompt --cached
	lgd = log --graph --decorate --oneline --date-order
	lgds = log --graph --decorate --oneline --date-order --all \
	--simplify-by-decoration
