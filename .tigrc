# Nikita Kouevda
# 2014/10/26

# Ignore case in searches
set ignore-case = true

# Split view heights 3:1 instead of 2:1
set split-view-height = 75%

# Show commit ID; show email user instead of author name
set main-view = id date author:email-user \
                commit-title:graph:true,refs:true,overflow:true

# Less-style navigation
bind generic g move-first-line
bind generic G move-last-line
bind main G move-last-line

# Only color content
color   status          default     default
color   cursor          default     default     bold
color   title-focus     default     default     bold    reverse
color   title-blur      default     default     bold    reverse
