# Nikita Kouevda
# 2014/08/15

# Add duplicates of OS X software
tap homebrew/dupes

# Update Homebrew itself and get newest formulae
update

# Upgrade all installed formulae
upgrade

# Install formulae
install bash
install bash-completion
install coreutils
install ctags
install diffutils
install findutils --default-names
install flac
install fzf
install git
install gnu-sed --default-names
install grep --default-names
install macvim
install mercurial
install nmap
install node
install python
install python3
install ranger
install the_silver_searcher
install tig
install tree
install valgrind
install vim --HEAD
install wget

# Override system openssl
link --force openssl

# Link all OS X applications
linkapps

# Remove old versions and clear cache
cleanup -s
